<p id="notice"><%= notice %></p>
<h1>Listing Pins</h1>

<div id="container">
  <% @pins.each do |pin| %>
      <div class="item" style="width: 25%">
        <div class="thumbnail">
          <%= pin.name %>
          <%= image_tag(pin.photo, :style=>'img-responsive') %>
          <%= pin.description %>
          <div class="buttons" style="margin-top:10px; margin-bottom:10px">
            <%= link_to 'Show', pin, :class => 'btn' %>
            <%= link_to 'Edit', edit_pin_path(pin), :class => 'btn'  %>
            <% if user_signed_in?  %>
                <%= link_to 'Destroy', pin, :class => 'btn' , method: :delete, data: { confirm: 'Are you sure?' } %>
            <% end %>
          </div>
        </div>
      </div>
  <% end %>

  <br>
  <% if user_signed_in?  %>
      <%= link_to 'New Pin', new_pin_path %>
  <%end%>
</div>

<script type="text/javascript" charset="utf-8">
  var $container= $('#container');
  //initialeze
  $contaainer.masonry({
    columnWidth: 200,
    itemSelector: '.item'
  });
  $(window).load(function () {
    var $container= $('#container');
    //initialeze
    $contaainer.masonry({
      columnWidth: 200,
      itemSelector: '.item'
    });
  })

</script>